@model IEnumerable<SalesWebMVC.Models.Vendedor>

@{
    ViewData["Title"] = "Vendedor";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Novo" class="btn btn-default">Criar Vendedor</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dataAnivesario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.salarioBase)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dataAnivesario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.salarioBase)
            </td>
            <td>
                <a asp-action="Editar" asp-host-id="@item.id">Editar</a>
                <a asp-action="Detail" asp-host-id="@item.id">Detalhes</a>
                <a asp-action="Delete" asp-host-id="@item.id">Excluir</a>
            </td>
        </tr>
        }
    </tbody>
</table>